@model WebDevCoursework.Models.ForumDetailsVM

@{
    ViewData["Title"] = "Details";
}

<h2>@Html.DisplayFor(model => model.Forum.Name)</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Posts
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Post item in Model.Posts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimePosted)
                </td>
            </tr>
        }
    </tbody>
</table>

<h4>Add a comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ForumId" value="@Model.Forum.Id"/>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Post" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger" asp-action="Index">Back</a>
</div>
